@model PizzaApp.Models.Identity.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@*<h2>Register</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div>
    <h4>Registration form</h4>
    <hr />
    @Html.ValidationSummary(false)

    <div>
        User Name
        <div>@Html.EditorFor(m => m.Name)</div>
    </div>
    <div>
        Address
        <div>@Html.EditorFor(m => m.Address)</div>
    </div>
    <div>
       Phone
        <div>@Html.EditorFor(m => m.Phone)</div>
    </div>
    <div>
        Email
        <div>@Html.EditorFor(m => m.Email)</div>
    </div>
    <div>
        Password
        <div>@Html.EditorFor(m => m.Password)</div>
    </div>
    <div>
        Confirm Password
        <div>@Html.EditorFor(m => m.PasswordConfirm)</div>
    </div>
    <div>
        <br />
        <div>
            <input type="submit" value="Registration" class="btn btn-dark mt-2"/>
        </div>
    </div>

</div>
}

