<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <style type="text/css">.fixed-top { }</style>
    <script src="~/Scripts/PizzaScript.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-fixed-top" style="background-color:white">
        <div class="container-fluid">
            <a class="navbar-brand logoStyle" href="#" style="align-content:start">
                <img src="~/Content/images/logo.jpg" alt="" width="40" height="40" class="d-inline-block align-text-top">
                Big-Bang-Pizza
            </a>
        </div>
        <div class="navbar navbar-inverse navbar-expand-lg" style="width:100%">
            <div class="container">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Menu", "Menu", "Menu")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Contact")</li>
                    </ul>
                </div>
            </div>
        </div>

    </nav>
    <div class="container body-content">
        @RenderBody()
        
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
