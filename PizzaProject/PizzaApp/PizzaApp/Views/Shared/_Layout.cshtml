<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Big-Bang-Pizza</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="https://localhost:44326/Home/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://localhost:44326/Menu/Menu">Menu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://localhost:44326/Basket/Basket">Basket</a>
                </li>

            </ul>
        </div>
        @if (Request.IsAuthenticated)
        {

            @*<div class="nav-link active text-white">
                Hi, @Html.ActionLink(User.Identity.Name,"Index", "Home", routeValues:null, htmlAttributes:new{ @class="username", title="Manage"})!
            </div>*@
            <div class="text-white">
                
                <form class="container" style="width: fit-content; align-self: end">
                    Hi,@Html.Label(User.Identity.Name)!
                    <a class="btn btn-secondary" href="@Url.Action("Private", "Account")">Private</a>
                    <a class="btn btn-secondary" href="@Url.Action("Logout", "Account")">Log out</a>
                </form>
            </div>
        }
        else
        {
            <form class="container" style="width: fit-content; align-self: end">
                <a class="btn btn-secondary" href="@Url.Action("Register", "Account")">Sign up</a>
                <a class="btn btn-secondary" href="@Url.Action("Login", "Account")">Sign in</a>
            </form>
        }

    </div>
</nav>
<div class="container body-content">
        @RenderBody()
        
    </div>



